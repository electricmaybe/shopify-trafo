{
  "name": "em-shopify-kit",
  "description": "Customizable modular development environment for blazing-fast Shopify theme creation",
  "author": "Electric Maybe <hello@electricmaybe.com>",
  "version": "2.0.0",
  "license": "ISC",
  "private": true,
  "scripts": {
    "dev": "concurrently -k -c \"#ff84cd,#8be9fd,#4def76\" \"npm:webpack:dev\" \"npm:tailwind:dev\" \"npm:shopify:serve\"",
    "production": "concurrently -k -c \"#ff84cd,#8be9fd,#4def76\" \"npm:shopify:serve\" \"npm:webpack:production\" \"npm:tailwind:production\"",
    "webpack:dev": "cross-env NODE_ENV=development BROWSERSLIST_ENV=development BROWSERSLIST_CONFIG=.config/.browserslistrc node_modules/.bin/webpack --config .config/webpack/webpack.dev.js --watch",
    "webpack:production": "cross-env NODE_ENV=production BROWSERSLIST_ENV=production BROWSERSLIST_CONFIG=.config/.browserslistrc node_modules/.bin/webpack --config .config/webpack/webpack.prod.js --watch",
    "webpack:build": "cross-env NODE_ENV=production BROWSERSLIST_ENV=production BROWSERSLIST_CONFIG=.config/.browserslistrc node_modules/.bin/webpack --config .config/webpack/webpack.prod.js",
    "shopify:serve": "cd build && shopify theme serve",
    "tailwind:dev": "npx tailwindcss --postcss -i ./src/_styles/main.css -o ./build/assets/style.css --watch",
    "tailwind:production": "NODE_ENV=production npx tailwindcss --postcss -i ./src/_styles/main.css -o ./build/assets/style.css --minify --watch",
    "tailwind:build": "NODE_ENV=production npx tailwindcss --postcss -i ./src/_styles/main.css -o ./build/assets/style.css --minify",
    "lint": "concurrently \"npm:lint:*\"",
    "lint:liquid": "shopify theme check",
    "lint:js": "node_modules/.bin/eslint ./src/assets/*.js --config .config/.eslintrc.js",
    "lint:css": "node_modules/.bin/stylelint ./src/assets/*.css --config .config/.stylelintrc.js",
    "build": "yarn tailwind:build && yarn webpack:build"
  },
  "dependencies": {
    "@tailwindcss/forms": "^0.3.3",
    "axios": "^0.21.3",
    "concurrently": "^6.2.2",
    "path-browserify": "^1.0.1",
    "sass": "^1.39.0",
    "tailwindcss": "^2.2.9"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.4",
    "autoprefixer": "^10.3.4",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-plugin-vue": "^7.17.0",
    "eslint-webpack-plugin": "^3.0.1",
    "file-loader": "^6.2.0",
    "glob": "^7.1.7",
    "liquid-schema-plugin": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-import": "^14.0.2",
    "postcss-import-ext-glob": "^2.0.1",
    "postcss-nesting": "^8.0.1",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-webpack-plugin": "^3.0.1",
    "tailwindcss-scroll-snap": "^1.1.0",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0",
    "webpack-import-glob-loader": "^1.6.3",
    "webpack-merge": "^5.8.0"
  }
}
